#include "stdafx.h"
#include <iostream>
#include <conio.h>
using namespace std;
void main() {
	int n,b,j,i;
	cout<<"Ingrese un Valor: ";
	do {
	cin>>n;
	if (n<0)
		cout<<"Ingrese un Valor Positivo: ";
	} while (n<=0);
	for (i=1;i<=n;i++) {
		cout << "------------------"<<endl;
		for (j=1;j<=10;j++) {
			std::cout << std::oct << i;
			cout << " + ";
			std::cout << std::oct << j;
			cout <<" = ";
			std::cout <<std::oct << i+j << endl;
		}

	}
	_getch();
}
